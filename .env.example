# SMARTWATT NEXUS Environment Configuration
# Copy this to .env and modify as needed

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///smartwatt_nexus.db

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# ML Model Configuration
ENABLE_TENSORFLOW=True
ENABLE_GPU=False

# Application Settings
DEBUG=True
TESTING=False
LOG_LEVEL=INFO

# TS Electric Department Settings
# Tariff rates (per unit in INR)
TARIFF_SLAB_1_RATE=2.80
TARIFF_SLAB_2_RATE=3.40
TARIFF_SLAB_3_RATE=4.60
TARIFF_SLAB_4_RATE=6.00
TARIFF_SLAB_5_RATE=7.50

# Fixed charges
FIXED_CHARGE=100
TAX_RATE=0.10

# Alert Settings
HIGH_CONSUMPTION_ALERT_THRESHOLD=1.3
ANOMALY_SENSITIVITY=1.5
